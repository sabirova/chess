package com.chessgame.server;

import com.chessgame.game.Player;
import com.chessgame.messenger.Messenger;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.HashMap;
import java.util.Map;


public class Server {

    public static Map<Player, Messenger> clients = new HashMap<Player, Messenger>();

    public static void main(String[] args) {

        try {
            int port = 8080;
            ServerSocket serverSocket = new ServerSocket(port);
            while (true) {
                Socket client = serverSocket.accept();
                new ClientThread(client);
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    public synchronized static String getPlayerList(Player player) {
        StringBuilder str = new StringBuilder();
        for (Player p: clients.keySet()) {
            if (!p.equals(player)) {
                str.append(p.getName() + " ");
            }
        }
        return str.toString();
    }

}
